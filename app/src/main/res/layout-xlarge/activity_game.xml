<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="angelcotes.viewmovil.GameActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TableLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center|center_vertical"
        android:weightSum="1"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:targetApi="ice_cream_sandwich"
                android:layoutMode="opticalBounds">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="9" >

                    <ImageButton
                        android:layout_width="91dp"
                        android:layout_height="81dp"
                        android:layout_margin="8dp"
                        android:id="@+id/back"
                        android:layout_row="1"
                        android:layout_column="6"
                        android:src="@drawable/exit"
                        android:focusableInTouchMode="false"
                        android:onClick="backToMenu"/>
                    <ImageButton
                        android:layout_width="91dp"
                        android:layout_height="81dp"
                        android:layout_margin="8dp"
                        android:id="@+id/enableSound"
                        android:layout_row="2"
                        android:layout_column="6"
                        android:src="@drawable/tecn"
                        android:onClick="setSound"
                        android:layout_gravity="center" />

                </GridLayout>
            <GridLayout
                android:layout_width="271dp"
                android:layout_height="197dp"
                android:layout_row="0"
                android:layout_column="30">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="116dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="40dp"
                    android:text="Total price $58000"
                    android:textColor="#595252"
                    android:textStyle="bold"
                    android:textColorHighlight="#494343"
                    android:id="@+id/toPay"
                    android:layout_row="0"
                    android:layout_column="30"
                    android:background="#e3b958"
                    android:autoText="false"
                    android:breakStrategy="high_quality" />

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="388dp"
                    android:layout_height="125dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="35dp"
                    android:text="Paid $550670"
                    android:textColor="#a99e08"
                    android:textStyle="bold"
                    android:textColorHighlight="#494343"
                    android:id="@+id/money"
                    android:layout_row="1"
                    android:layout_column="30"
                    android:layout_gravity="left|center|top"
                    android:background="#373537"
                    android:autoText="false"
                    android:breakStrategy="balanced"
                    android:elegantTextHeight="false" />

            </GridLayout>
            <Button
                android:layout_width="128dp"
                android:layout_height="233dp"
                android:id="@+id/target"
                android:background="@drawable/border2"
                android:layout_row="0"
                android:layout_column="32" />
        </GridLayout>
        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_weight="0.4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button8"
                android:layout_column="17"
                android:visibility="invisible"
                android:breakStrategy="high_quality" />
        </TableRow>

        <GridLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:targetApi="ice_cream_sandwich"
            android:layoutMode="opticalBounds"
            android:orientation="vertical">

            <Button
                android:layout_margin="8dp"
                android:layout_width="128dp"
                android:layout_height="233dp"
                android:background="@mipmap/cien"
                android:id="@+id/one_hundred_thousand"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center_vertical" />

            <Button
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/cincuenta"
                android:id="@+id/fifty_thousand"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center_vertical" />

            <Button
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/veinte"
                android:id="@+id/twenty_thousand"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="center_vertical" />

            <Button
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/diez"
                android:id="@+id/ten_thousand"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_gravity="center_vertical" />

            <Button
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/cinco"
                android:id="@+id/five_thousand"
                android:layout_row="0"
                android:layout_column="4"
                android:layout_gravity="center_vertical" />

            <Button
                android:layout_margin="8dp"
                android:layout_width="128dp"
                android:layout_height="233dp"
                android:background="@mipmap/dos"
                android:id="@+id/two_thousand"
                android:layout_row="0"
                android:layout_column="5"
                android:layout_gravity="center_vertical" />

            <Button
                android:layout_margin="8dp"
                android:layout_width="128dp"
                android:layout_height="233dp"
                android:background="@mipmap/mil"
                android:id="@+id/one_thousand"
                android:layout_row="0"
                android:layout_column="6"
                android:layout_gravity="center_vertical" />

        </GridLayout>

    </TableLayout>

</FrameLayout>
